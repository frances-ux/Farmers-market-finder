<!-- reference index page for the for of loop within a form tag so you can use an action with the correct path & with the id of each book or comic and the method -->

<!-- form inside the td that will have the post method for both but one of them will be for edit and one for delete  -->

<% for (market of data) { %>
        <tr>
            <td><%= market.marketName %></td>
            <td>
                <a href="/admin/update-market/<%= market._id %>">    
                    <input type="submit" value="Edit" class="button-secondary">
                </a>
            </td>
            <td><form action="/markets/<%= market._id%>?_method=DELETE" method="POST" enctype="application/x-www-form-urlencoded"><input type="submit" value="Delete" class="button"></form></td>
        </tr>
<% } %>

